---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";

const tagMap = new Map<string, number>();

const posts = (await getCollection("recipes")).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// Build tagMap
for (const post of posts) {
	if (Array.isArray(post.data.tags)) {
		for (const tag of post.data.tags) {
			tagMap.set(tag, (tagMap.get(tag) ?? 0) + 1);
		}
	}
}

const tags = Array.from(tagMap.keys()).sort((a, b) => a.localeCompare(b));
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.recipe-item {
				padding-bottom: 1rem;
			}
			.tag-list {
				display: flex;
				flex-wrap: wrap; /* allows pills to wrap on smaller screens */
				gap: 0.5rem; /* space between pills */
				justify-content: flex-start;
				padding-top: 0.5rem;
			}

			.tag-list a {
				display: inline-block;
				padding: 0.3em 0.8em;
				border: solid;
				border-width: 1px;
				border-radius: 9999px;
				border-color: var(--accent);
				color: var(--accent);
				font-size: 0.9rem;
				line-height: 1.7;
			}
			.view-all-button {
				padding-top: 1rem;
			}
			.intro-section {
				display: flex;
				flex-direction: column;
				gap: 2rem;
				padding-bottom: 1rem;
			}
			.intro-text {
				text-align: justify;
			}
			.hero-image {
				width: 100%;
				height: auto;
				aspect-ratio: 16 / 9;
				object-fit: cover;
				object-position: 50% 25%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			section {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(100% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: left;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					margin-bottom: 2rem;
				}
				.intro-section {
					flex-direction: column;
				}
				.intro-section > div {
					width: 100%;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<div class="title">
					<h1>No spices. No olives. Chop chop!</h1>
				</div>
				<div class="intro-section">
					<div class="intro-image">
						<img src="/images/gorgzilla.jpeg" class="hero-image" />
					</div>
					<div class="intro-text">
						<p>
							Your destination for simple, inoffensive cooking
							that celebrates eggs, comfort desserts like crème
							brûlée, and absolutely no rogue spices or olives. If
							you prefer a safe kitchen experience with reliably
							mild flavours (and maybe a hint of ginger beer),
							you’ve found your culinary haven. Proceed…
							cautiously.
						</p>
					</div>
				</div>
				<hr />
			</section>
			<section>
				<ul>
					{
						posts.slice(0, 5).map((post) => (
							<li class="recipe-item" key={post.id}>
								<a href={`/recipes/${post.id}/`}>
									{/* Recipe image, title, date etc */}
									<h2>{post.data.title}</h2>
								</a>

								<div class="tag-list">
									{post.data.tags?.map((tag) => (
										<a href={`/tags/${tag}/`} key={tag}>
											{tag}
										</a>
									))}
								</div>
							</li>
						))
					}
				</ul>
				<div class="view-all-button">
					<a href="/recipes">View All Recipes</a>
				</div>
			</section>
		</main>

		<Footer />
	</body>
</html>
